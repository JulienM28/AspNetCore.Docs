@page
@model HttpRequestsSample.Pages.BasicModel

@{
	ViewData["Title"] = "Basic Usage";
}

<h1>Basic Usage</h1>

@if (@Model.GitHubBranches is null)
{
	<div class="alert alert-danger" role="alert">
		Unable to load branches from GitHub. Please try again later.
	</div>
}
else
{
	<p>@Model.GitHubBranches.Count() GitHub Branches</p>
	<ul class="list-group">
		@foreach (var gitHubBranch in @Model.GitHubBranches)
		{
			<li class="list-group-item">@gitHubBranch.Name</li>
		}
	</ul>
}
